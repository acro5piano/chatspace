.chat-group-form
  %h1 新規チャットグループ
  = form_for @new_chat_group do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label
          = f.label :name, 'グループ名'
      .chat-group-form__field--right
        #chat_group_name
          = f.text_field :name, placeholder: "グループ名を入力してください", class: 'chat-group-form__input'

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label Add new Members

      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          %input#user-search-field.chat-group-form__input{ placeholder: '追加したいユーザー名を入力してください' }
            #user-search-result

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label
          = f.label 'ChatMembers'
      .chat-group-form__field--right
        #chat-group-users
          .chat-group--user.chat-group-user__name
            = current_user.name
            = f.hidden_field :user_ids, value: current_user.id, multiple: true
          - @new_chat_group.users.each do |user|
            .chat-group-user{ id: "chat-group-user-#{user.id}" }
              %input{ value: user.id }
              %p= user.name
              -#hamlの書きかた、覚えるべし
              %a{ 'data-user-id': user.id } 削除

    .chat-group-form__field.clearfix
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form_action-button"

