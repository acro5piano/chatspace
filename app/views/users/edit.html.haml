#account-page.account-page
  .account-page.clearfix
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h2 Edit Account
        %h5 アカウントの編集
        = link_to "ログアウト", destroy_user_session_path, :method => :delete, class: "left-button"
        = link_to "トップページに戻る", root_path, class: "left-button"

      .account-page__inner--right.user-form
        = form_for @user, :url => {:action => :update} do |f|
          .field
            .field-label
              = f.label :name
            .field-input
              #user_name
                = f.text_field :name, autofocus: true

          .field
            .field-label
              = f.label :email
            .field-input
              #user_email
                = f.email_field :email

          .field
            .field-label
              = f.label :password
              %i (変更したくない場合は、空白のままにしておいてください)

            .field-input
              #user_password
                = f.password_field :password, autocomplete: "off"

          .field
            .field-label
              = f.label :password_confirmation

            .field-input
              = f.password_field :password_confirmation, autocomplete: "off"

          .field
            .field-label
              = f.label :current_password
              %i (変更には現在のパスワードが必要です。)

            .field-input
              = f.password_field :current_password, autocomplete: "off"

          .actions
            = f.submit "Update", class: "right-button"

